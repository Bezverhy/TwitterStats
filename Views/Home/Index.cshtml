<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>

    $('#btn-one').click(function () {
        if ($('#InputAccountName').val() != '') {
            $('#btn-one').html('<div class="loader" style="display:inline-block" role="status" aria-hidden="true"></div> Завантаження...').addClass('disabled');
        }
    });
    
</script>